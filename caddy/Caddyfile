{
  https_port 8443
  servers {
    listener_wrappers {
      proxy_protocol {
        allow 127.0.0.1/32
      }
      tls
    }
    trusted_proxies static 127.0.0.1/32
  }
}

{$REALITY_DOMAIN} {
  bind 127.0.0.1

  root * /srv
  file_server
  header Strict-Transport-Security "max-age=63072000"

  handle /{$SUB_PATH} {
    rewrite * /sub
    file_server
    header routing {$ROUTING_HEADER}
  }
}